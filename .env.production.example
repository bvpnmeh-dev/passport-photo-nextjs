# Production Environment Variables
# Copy to .env.production and set your production values

# Stripe Configuration (PRODUCTION KEYS)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_key
STRIPE_SECRET_KEY=sk_live_your_production_secret

# Studio/Business Configuration
NEXT_PUBLIC_STUDIO_NAME="Passport Photo Fast"
NEXT_PUBLIC_STUDIO_DESCRIPTION="Professional passport photos ready in 10 minutes"

# Business Contact Information
NEXT_PUBLIC_BUSINESS_ADDRESS="Your Production Address"
NEXT_PUBLIC_BUSINESS_PHONE="+44 1234 567890"
NEXT_PUBLIC_BUSINESS_EMAIL="contact@yoursite.com"
NEXT_PUBLIC_BUSINESS_HOURS="Mon-Fri: 9:00 AM - 7:00 PM"

# ============================================
# ADMIN-ADJUSTABLE PRICING CONFIGURATION
# ============================================
# ALL PRICES IN PENCE/CENTS (e.g., 888 = £8.88)

# UK Digital ID Package (Standard)
NEXT_PUBLIC_STANDARD_PKG_NAME="Standard"
NEXT_PUBLIC_STANDARD_PKG_DESCRIPTION="Single country photo"
NEXT_PUBLIC_STANDARD_PKG_PRICE_IN_CENT=888
NEXT_PUBLIC_STANDARD_PKG_CURRENCY=gbp
NEXT_PUBLIC_STANDARD_PKG_PRINTED_PHOTO_NUMBER=2
NEXT_PUBLIC_STANDARD_PKG_IS_POPULAR=false
NEXT_PUBLIC_STANDARD_PKG_IS_PICKUP=false

# Multi-Country Package (Premium)
NEXT_PUBLIC_PREMIUM_PKG_NAME="Premium"
NEXT_PUBLIC_PREMIUM_PKG_DESCRIPTION="Multi-country support"
NEXT_PUBLIC_PREMIUM_PKG_PRICE_IN_CENT=1099
NEXT_PUBLIC_PREMIUM_PKG_CURRENCY=gbp
NEXT_PUBLIC_PREMIUM_PKG_PRINTED_PHOTO_NUMBER=2
NEXT_PUBLIC_PREMIUM_PKG_IS_POPULAR=true
NEXT_PUBLIC_PREMIUM_PKG_IS_PICKUP=false

# Additional Photo Pricing
NEXT_PUBLIC_PER_ADDITIONAL_PHOTO_PRICE_IN_CENT=200

# ============================================
# MARKETING & UPSELL CONFIGURATION
# ============================================
NEXT_PUBLIC_COUNTRY_COUNT="200+"
NEXT_PUBLIC_REGULAR_PRICE_IN_CENT=2120
NEXT_PUBLIC_APPROVAL_RATE="98%"
NEXT_PUBLIC_CUSTOMER_COUNT="2,800+"

# ============================================
# FEATURE FLAGS
# ============================================
# Set to "true" to enable Irish Passport option
NEXT_PUBLIC_SHOW_IRISH_PASSPORT=false

# ============================================
# ADMIN SECURITY CONFIGURATION
# ============================================
# CRITICAL: Change these in production!
ADMIN_ACCESS_KEYS="your-secure-admin-key-1,your-secure-admin-key-2"
ADMIN_RATE_LIMIT_MAX_REQUESTS=10
ADMIN_RATE_LIMIT_WINDOW_MS=60000

# ============================================
# UPSELL CALCULATION
# ============================================
# The multi-country upsell price is automatically calculated as:
# PREMIUM_PRICE - STANDARD_PRICE
# Example: £15.20 - £8.88 = £6.32 upsell

# To change upsell price:
# 1. Adjust NEXT_PUBLIC_STANDARD_PKG_PRICE_IN_CENT
# 2. Adjust NEXT_PUBLIC_PREMIUM_PKG_PRICE_IN_CENT
# 3. Redeploy application (no code changes needed)

# API Configuration
IDPHOTO_API_ENDPOINT=https://api.idphoto.com
IDPHOTO_API_KEY=your_production_api_key
IDPHOTO_API_SECRET=your_production_api_secret

# Admin Security (DO NOT COMMIT REAL VALUES)
ADMIN_JWT_SECRET=generate_secure_random_string_min_32_chars
ADMIN_SESSION_TIMEOUT=3600

# Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
